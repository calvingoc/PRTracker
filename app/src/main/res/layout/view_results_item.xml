<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/view_results_view">


    <TextView
        android:id="@+id/vr_tv_date"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/vr_iv_pr"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/vr_tv_date"
        app:layout_constraintLeft_toRightOf="@+id/vr_tv_date"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/pr" />

    <TextView
        android:id="@+id/vr_tv_results"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="0dp"
        android:gravity="center_vertical|right"
        app:layout_constraintBottom_toBottomOf="@+id/vr_iv_pr"
        app:layout_constraintLeft_toRightOf="@+id/vr_iv_pr"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0" />

    <View
        android:id="@+id/vr_v_id"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryDark"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vr_tv_notes"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/vr_tv_id"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/vr_tv_notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/vr_v_id"
        app:layout_constraintRight_toRightOf="@+id/vr_v_id"
        app:layout_constraintTop_toBottomOf="@+id/vr_iv_pr" />
</android.support.constraint.ConstraintLayout>